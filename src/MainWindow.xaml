<Controls:MetroWindow x:Class="LiveReload.MainWindow"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LiveReload" mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" Height="480" Width="640" Icon="/LiveReload;component/img/LiveReload.ico" ResizeMode="NoResize" MinWidth="640" MinHeight="480" Closing="Window_Closing">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Colours.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Fonts.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Accents/Blue.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Accents/BaseLight.xaml" />
                <ResourceDictionary Source="pack://application:,,,/img/icons.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Controls:MetroWindow.WindowCommands>
        <Controls:WindowCommands>
            <Button Name="buttonVersion" Content="version" Click="buttonVersion_Click" ToolTip="Reveal log" />
        </Controls:WindowCommands>
    </Controls:MetroWindow.WindowCommands>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="152" />
            <ColumnDefinition Width="466" />
        </Grid.ColumnDefinitions>
        <CheckBox Content="Compile scripts, stylesheets, etc" HorizontalAlignment="Left" Margin="65,312,0,0" Name="checkBoxCompile" VerticalAlignment="Top" Grid.Column="1" IsEnabled="False" Click="checkBoxCompile_Click" />
        <CheckBox Content="Run a custom command"              HorizontalAlignment="Left" Margin="65,372,0,0" Name="checkBoxRunCustom" VerticalAlignment="Top" Grid.Column="1" IsEnabled="False" Visibility="Hidden" />
        <Button Style="{DynamicResource SquareButtonStyle}" Content="Options..." HorizontalAlignment="Left" Margin="290,306,0,0" Name="buttonCompile" VerticalAlignment="Top" Width="75" Grid.Column="1" IsEnabled="False" Visibility="Hidden" />
        <Button Style="{DynamicResource SquareButtonStyle}" Content="Options..." HorizontalAlignment="Left" Margin="290,366,0,0" Name="buttonRunCustom" VerticalAlignment="Top" Width="75" Grid.Column="1" IsEnabled="False" Visibility="Hidden" />
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="45,147,0,0" Name="textBlock1" VerticalAlignment="Top" Grid.Column="1">
            (1) Site URL(s):
        </TextBlock>
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="45,188,0,0" Name="textBlock2" VerticalAlignment="Top" Grid.Column="1">(2) Insert this tag before &lt;/body&gt; or
            <Hyperlink
                NavigateUri="http://go.livereload.com/extensions"
                RequestNavigate="Hyperlink_RequestNavigate">
                install browser extensions
            </Hyperlink>:
        </TextBlock>
        <TextBox Height="23" HorizontalAlignment="Right" Margin="0,144,12,0" Name="textBox1" VerticalAlignment="Top" Width="326" IsReadOnly="True" Foreground="Black" Grid.Column="1">
            localhost:3000, site.local, dev.example.com</TextBox>
        <TextBox Height="35" HorizontalAlignment="Left" Margin="65,217,0,0" Name="textBox2" VerticalAlignment="Top" Width="389" FontSize="10" TextWrapping="Wrap" IsReadOnly="True" Grid.Column="1">
            &lt;script&gt;document.write('
                &lt;script src="http://' + (location.host || 'localhost').split(':')[0] + ':35729/livereload.js?snipver=1"&gt;
                    &lt;/' + 'script&gt; ')
                &lt;/script&gt;
        </TextBox>
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="45,283,0,0" Name="textBlock3" VerticalAlignment="Top" Grid.Column="1">
            (3) When a file is modified:
        </TextBlock>
        <TextBlock Height="32" Margin="83,334,184,0" Name="textBlock4" VerticalAlignment="Top" TextWrapping="Wrap" FontSize="10" Grid.Column="1">
            CoffeeScript, Eco, HAML, IcedCoffeeScript, Jade, LESS, SASS, Compass, Slim, Stylus
        </TextBlock>
        <TextBox Grid.Column="1" Height="23" HorizontalAlignment="Left" Margin="6,406,0,0" Name="textBoxNodeResult" VerticalAlignment="Top" Width="448" IsReadOnly="True" Visibility="Hidden" />
        <TextBlock Grid.Column="1" Height="23" HorizontalAlignment="Left" Margin="130,71,0,0" Name="textBlockProjectName" Text="-" VerticalAlignment="Top" Width="324" FontWeight="Bold" FontSize="14" />
        <TextBlock Grid.Column="1" Height="23" HorizontalAlignment="Left" Margin="130,100,0,0" Name="textBlockProjectPath" Text="-" VerticalAlignment="Top" Width="324" />
        <Grid Name="gridProjects" Background="LightGray" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="391*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Button Style="{DynamicResource MetroCircleButtonStyle}"
                    Name="buttonProjectAdd"
                    Click="buttonProjectAdd_Click"
                    Grid.Row="1"
                    Grid.Column="1"
                    Height="55"
                    Width="55"
                    Margin="-4,0,-4,8"
                    >
                <Rectangle Width="20" Height="20">
                    <Rectangle.Fill>
                        <VisualBrush Stretch="Uniform"
                                 Visual="{StaticResource appbar_add}" />
                    </Rectangle.Fill>
                </Rectangle>
            </Button>
            <Button Style="{DynamicResource MetroCircleButtonStyle}"
                    Name="buttonProjectRemove"
                    Click="buttonProjectRemove_Click"
                    Grid.Row="1"
                    Grid.Column="3"
                    Height="55"
                    Width="55"
                    Margin="-4,0,-4,8"
                    >
                <Rectangle Width="20" Height="20">
                    <Rectangle.Fill>
                        <VisualBrush Stretch="Uniform" Visual="{StaticResource appbar_del}" />
                    </Rectangle.Fill>
                </Rectangle>
            </Button>
            <TreeView Grid.Row="0" Grid.Column="0" Name="treeViewProjects" SelectedItemChanged="treeViewProjects_SelectedItemChanged" BorderThickness="0" Grid.ColumnSpan="5" Background="LightGray" />
        </Grid>
    </Grid>
</Controls:MetroWindow>
